<%= content_for :title, t('sidebar.mng_photos') %>

<section class="m-5 mt-3">
    <h1 class="text-center"><%= t('sidebar.mng_photos') %></h1>

    <div class="w-100 d-flex flex-wrap justify-content-between my-5 gap-3">
        <% @photos.each do |photo| %>
          <div class="photo-card">
            <%= link_to photo_path(photo), data: { turbo_frame: "modal" } do %>
            <%= image_tag photo.image_path.url, alt: t('button.photo', count: 1), class: "photo-image" %>
            <%end%>

            <div class="title-container d-flex flex-nowrap">
                <p class="m-0 truncate card-title"><%= photo.title %></p>
                <span class="ms-auto"><i class="fa-solid fa-pen-to-square fa-lg" title="<%= t('button.edit') %>"></i></span>
            </div>
          </div>
        <% end %>
    </div>

    <div class="d-flex mt-5 px-3  w-100 justify-content-center">
        <% paginate @photos, window: 2 %>
    </div>

</section>
<%= content_for :title, t('sidebar.mng_albums') %>
<!-- TODO Handle album clicking + album modal-->
<section class="m-5 mt-3">
    <h1 class="text-center"><%= t('sidebar.mng_albums') %></h1>

    <div class="w-100 d-flex flex-wrap justify-content-center my-5 gap-5">
        <% 20.times do %>
          <div class="album-card p-4">
            <div class="photo-stack">
                <%= image_tag "demo-avatar.png", alt: t('button.photo', count: 1), class: "photo-image z-1 layer1" %>
                <%= image_tag "demo-avatar.png", alt: t('button.photo', count: 1), class: "photo-image z-2 layer2" %>
                <%= image_tag "demo-avatar.png", alt: t('button.photo', count: 1), class: "photo-image z-3 layer3" %>
            </div>

            <div class="title-container d-flex flex-nowrap">
                <p class="m-0 truncate card-title"><%= "long long long long long long photo title" %></p>
                <span class="ms-auto"><i class="fa-solid fa-pen-to-square fa-lg" title="<%= t('button.edit') %>"></i></span>
            </div>        
          </div>
        <% end %>
    </div>

    <nav class="nav-pagination ms-auto" aria-label="Page navigation example text-center">
        <ul class="pagination justify-content-center my-5">
            <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
            </li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
            </li>
        </ul>
    </nav>

</section>
<%- if controller_name != 'sessions' %>
  <p class="mt-3 text-center">
      <i class="fa-solid fa-arrow-left"></i>
      <%= link_to t('profile.back_to_login'), new_session_path(resource_name), class: "custom-link" %>
  </p>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
<div class="d-flex gap-2">
  <%= t('message.not_have_acc')%>
  <%= link_to t('profile.create_acc'), new_registration_path(resource_name), class: "fw-bold custom-link" %>
</div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('profile.forgot_pw'), new_password_path(resource_name), class: "custom-link" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('message.not_receive_instruction'), new_confirmation_path(resource_name), class: "custom-link text-secondary" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>
